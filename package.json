{
	"name": "16pixels",
	"version": "0.1.9",
	"publishConfig": {
		"registry": "https://npm.pkg.github.com/"
	},
	"description": "16pixels.css is a set of CSS rules to ensure consistent 16 pixels based typography. Pixels are used for font sizes and line heights, as well as for paddings and margins. Can be used as typography normalizer. No dependencies. Wrap your HTML content with class .col and you are done.",
	"keywords": [
		"16pixels",
		"typeface",
		"font",
		"css",
		"grid",
		"typography"
	],
	"main": "main.js",
	"window": {
		"icon": "favicon-32x32.png"
	},
	"repository": {
		"type": "git",
		"url": "git://github.com/englishextra/16pixels.git"
	},
	"files": [
		"LICENSE.md",
		"index.html",
		"css/16pixels.css",
		"css/16pixels.min.css"
	],
	"filename": "css/16pixels.min.css",
	"autoupdate": {
		"source": "git",
		"target": "git://github.com/englishextra/16pixels.git",
		"fileMap": [
			{
				"basePath": "",
				"files": [
					"css/16pixels*"
				]
			}
		]
	},
	"dependencies": {
		"npm": "^7.3.0"
	},
	"devDependencies": {
		"browser-sync": "^2.26.13",
		"gulp": "^4.0.2",
		"gulp-autoprefixer": "^7.0.1",
		"gulp-clean-css": "^4.3.0",
		"gulp-cli": "^2.3.0",
		"gulp-plumber": "^1.2.1",
		"gulp-prettier": "^3.0.0",
		"gulp-rename": "^2.0.0",
		"gulp-sass": "^4.0.2",
		"gulp-sass-lint": "^1.4.0",
		"gulp-sourcemaps": "^3.0.0",
		"gulp-strip-debug": "^3.0.0"
	},
	"scripts": {
		"test": "gulp lint-libbundle-css"
	},
	"email": "englishextra@mail.ru",
	"url": "https://github.com/englishextra/16pixels/issues",
	"maintainers": [
		{
			"name": "Serguei Shimansky",
			"email": "englishextra@mail.ru",
			"url": "https://github.com/englishextra"
		}
	],
	"author": {
		"name": "englishextra",
		"email": "englishextra@mail.ru",
		"url": "https://github.com/englishextra"
	},
	"license": "(MIT)"
}
